{
	"name": "security-article-search-mcp",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"deploy:container": "./deploy-container.sh",
		"dev": "wrangler dev",
		"dev:container": "wrangler dev --config wrangler-container.jsonc",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"start": "wrangler dev",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"upload-data": "node scripts/upload-metadata.js",
		"setup": "npm run upload-data && echo 'Setup complete! Run npm run dev to test locally'",
		"verify": "node scripts/verify-deployment.js",
		"verify:deployment": "node scripts/verify-deployment.js",
		"test": "vitest",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@cloudflare/containers": "^0.1.0",
		"@cloudflare/workers-oauth-provider": "^0.0.5",
		"@modelcontextprotocol/sdk": "1.17.1",
		"agents": "^0.0.109",
		"express": "^4.18.2",
		"hono": "^4.8.12",
		"node-fetch": "^3.3.2",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241127.0",
		"@vitest/coverage-v8": "^2.1.8",
		"marked": "^16.1.2",
		"typescript": "5.8.3",
		"vitest": "^2.1.8",
		"workers-mcp": "^0.0.13",
		"wrangler": "^4.27.0"
	}
}
